<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="de.ritterweb.checkitv01.ui.HomeFragment"
        android:label="Checklisten"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_homeFragment_to_dialogCklInput"
            app:destination="@id/dialogCklInput" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="de.ritterweb.checkitv01.ui.LoginFragment"
        android:label="Gruppen anlegen"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_welcomeFragment"
            app:destination="@id/welcomeFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right">
            <argument android:name="username" />
            <argument android:name="password" />
        </action>
        <argument
            android:name="username"
            android:defaultValue="@null"
            app:argType="string"
            app:nullable="true" />
        <deepLink
            android:id="@+id/deepLink"
            android:autoVerify="true"
            app:uri="example.com/login/{username}" />
    </fragment>


    <!--    Im Folgenden Fragment wird mit {username} der Inhalt der Variable username als Label gesetzt-->
    <fragment
        android:id="@+id/welcomeFragment"
        android:name="de.ritterweb.checkitv01.ui.WelcomeFragment"
        android:label="Wilkommen {username}"
        tools:layout="@layout/fragment_welcome">
        <argument
            android:name="username"
            app:argType="string" />
        <argument
            android:name="password"
            app:argType="string" />
        <action
            android:id="@+id/action_welcomeFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="de.ritterweb.checkitv01.ui.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_setting" />
    <fragment
        android:id="@+id/termsFragment"
        android:name="de.ritterweb.checkitv01.ui.TermsFragment"
        android:label="Terms &amp; Conditions"
        tools:layout="@layout/fragment_terms" />
    <action
        android:id="@+id/action_global_termsFragment"
        app:destination="@id/termsFragment"
        app:enterAnim="@anim/slide_in_top"
        app:exitAnim="@anim/slide_out_bottom"
        app:popEnterAnim="@anim/slide_in_bottom"
        app:popExitAnim="@anim/slide_out_top" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="de.ritterweb.checkitv01.ui.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/dialogCklInput"
        android:name="de.ritterweb.checkitv01.ui.DialogClkInput"
        android:label="Checklisten auswÃ¤hlen"
        tools:layout="@layout/dialog_clk_input">
        <action
            android:id="@+id/action_dialogCklInput_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>